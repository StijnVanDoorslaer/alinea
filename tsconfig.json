{
  "compilerOptions": {
    "noEmit": true,
    "declaration": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "moduleDetection": "force",
    "incremental": true,
    "jsx": "react-jsx",
    "paths": {
      "alinea": ["./src/index.ts"],
      "alinea/*": ["./src/*"]
    }
  },
  "references": [{"path": "./tsconfig.build.json"}],
  "include": ["src", "test"]
}
